                   boxes >= 0.1.4 && < 0.2.0,
                   bytestring -any,
                   containers -any,
                   directory -any,
                   file-embed -any,
                   filepath -any,
                   Glob >= 0.7 && < 0.8,
                   haskeline >= 0.7.0.0,
                   http-types == 0.9.*,
                   monad-logger -any,
                   mtl -any,
                   network -any,
                   optparse-applicative >= 0.13.0,
